#include <ESP8266WiFi.h>
#include <WiFiClient.h>
#include <ESP8266HTTPClient.h>
#include <TinyMPU6050.h>

WiFiClient wifiClient;

const String ssid = "TA1AFS";
const String password = "?sngMuDvk@#";

const String key = "lB0lSfBOh0elfpzDkOA3URYF1sfxmpzP5bkzJxUyJLA";
const String event = "deprem";

int sda = 2;
int scl = 0;
int bz  = 3;

bool iftttSent = false; // ifttt isteği gönderildi mi?
unsigned long iftttTime = 0; // son ifttt isteği zamanı

const float pos_offset = 1.35;
const float neg_offset = -1.35;
long angle_x, angle_y, offset_x, offset_y;
MPU6050 mpu (Wire);

void url_istek() {
  if (!iftttSent && WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    String sayfa = "http://maker.ifttt.com/trigger/" + event + "/with/key/" + key;
    http.begin(wifiClient, sayfa);
    int httpCode = http.GET();
    Serial.println(httpCode);
    if (httpCode > 0) {
      String payload = http.getString();
      Serial.println(payload);
      iftttSent = true;
      iftttTime = millis();
    }
    http.end();
  }
}

void setup() {
  Wire.begin(sda, scl);
  mpu.Initialize();
  Serial.begin(115200);
  WiFi.mode(WIFI_STA);
  WiFi.disconnect();
  delay(100);
  pinMode(bz, OUTPUT);   digitalWrite(bz, LOW);

  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
  }

  Serial.println("");
  Serial.println("WiFi connected");

  digitalWrite(bz, HIGH);
  delay(75);
  digitalWrite(bz, LOW);
  delay(35);
  digitalWrite(bz, HIGH);
  delay(225);
  digitalWrite(bz, LOW);
  delay(35);
  digitalWrite(bz, HIGH);
  delay(225);
  digitalWrite(bz, LOW);

  Serial.println("IP address: ");
  IPAddress ip = WiFi.localIP();
  Serial.println(ip);

  Serial.println("Starting MPU calibration...");
  mpu.Calibrate();
  Serial.println("Calibration complete!");

  for (int i = 0; i < 350; i++) {
    mpu.Execute();
    offset_x = mpu.GetAngX();
    offset_y = mpu.GetAngY();
  }

  digitalWrite(bz, HIGH);
  delay(225);
  digitalWrite(bz, LOW);
  delay(35);
  digitalWrite(bz, HIGH);
  delay(75);
  digitalWrite(bz, LOW);
  delay(35);
  digitalWrite(bz, HIGH);
  delay(225);
  digitalWrite(bz, LOW);
  delay(35);
  digitalWrite(bz, HIGH);
  delay(75);
  digitalWrite(bz, LOW);
  delay(35);
}

void loop() {

  for (int i = 0; i < 50; i++) {
    mpu.Execute();
    angle_x = mpu.GetAngX();
    angle_y = mpu.GetAngY();
  }

  if ( pos_offset < angle_x - offset_x ||
       neg_offset > angle_x - offset_x ||
       pos_offset < angle_y - offset_y ||
       neg_offset > angle_y - offset_y ) {

    url_istek();

    digitalWrite(bz, HIGH);
    delay(50);
    digitalWrite(bz, LOW);
    delay(50);

    mpu.Execute();
    offset_x = mpu.GetAngX();
    offset_y = mpu.GetAngY();
  }

  if (iftttSent && millis() - iftttTime > 10000) {
    iftttSent = false;
  }

}
